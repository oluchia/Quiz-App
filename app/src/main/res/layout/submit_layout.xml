<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oluchianyabuike.quizapp.MainActivity3">

    <ImageView
        android:id="@+id/icon_1"
        android:layout_width="@dimen/other"
        android:layout_height="@dimen/other"
        android:src="@drawable/icon_1"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp" />

    <TextView
        android:id="@+id/exit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_1"
        android:text="input message here"
        android:textSize="@dimen/textSize"
        android:textAllCaps="true"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_1"
        android:text="Try Again"
        android:textColor="#FFFFFF"
        android:onClick="restart"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/other"/>

</RelativeLayout>
